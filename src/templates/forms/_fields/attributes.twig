{% if availableAttributes|length %}
    <div class="amforms__container hidden">
        <div class="pane lightpane meta amforms__panel">
            <div class="data">
                <h2>{{ 'Available attributes'|t('simple-forms') }}</h2>
            </div>
            <div class="amforms__attributes">
                {% set foundTab = false %}
                {% for attribute in availableAttributes -%}
                    <span class="btn" data-attribute="{{ attribute }}">{{ attribute }}</span>
                {% endfor %}
            </div>
        </div>
    </div>

    {% do view.registerJsFile('simple-forms/js/FormAttributes.js') %}
    {% do view.registerCssFile('simple-forms/css/FormAttributes.css') %}
    {% js %}
        new Craft.FormAttributes();
    {% endjs %}
{% endif %}
