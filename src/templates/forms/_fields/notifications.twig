{% import '_includes/forms' as forms %}

{{ forms.lightswitchField({
    label: 'Send notifications'|t('simple-forms'),
    id: 'notificationEnabled',
    name: 'notificationEnabled',
    on: form.notificationEnabled,
    first: true,
    onLabel: 'Enable'|t('simple-forms'),
    offLabel: 'Disable'|t('simple-forms'),
    errors: form.getErrors('notificationEnabled'),
    instructions: 'Whether to email form submissions.'|t('simple-forms')
}) }}
{{ forms.lightswitchField({
    label: 'Send confirmation'|t('simple-forms'),
    id: 'sendCopy',
    name: 'sendCopy',
    on: form.sendCopy,
    onLabel: 'Enable'|t('simple-forms'),
    offLabel: 'Disable'|t('simple-forms'),
    errors: form.getErrors('sendCopy'),
    instructions: 'Whether to send a confirmation to the submitter.'|t('simple-forms'),
    toggle: 'sendCopyTo-container'
}) }}
<div id="sendCopyTo-container"{% if form.sendCopy != '1' %} class="hidden"{% endif %}>
    {{ forms.selectField({
        label: "Send confirmation to"|t('simple-forms'),
        instructions: "Please select an email field."|t('simple-forms'),
        warning: "The value of this field should be an email address."|t('simple-forms'),
        id: 'sendCopyTo',
        name: 'sendCopyTo',
        options: craft.simpleForms.getFieldHandles(),
        value: form.sendCopyTo
    }) }}
</div>
{{ forms.lightswitchField({
    label: 'Add attachments with notifications'|t('simple-forms'),
    id: 'notificationFilesEnabled',
    name: 'notificationFilesEnabled',
    on: form.notificationFilesEnabled,
    onLabel: 'Enable'|t('simple-forms'),
    offLabel: 'Disable'|t('simple-forms'),
    errors: form.getErrors('notificationFilesEnabled'),
    instructions: 'Whether to add possible attachments to the email.'|t('simple-forms')
}) }}
<hr>
<h2>{{ 'Notification'|t('simple-forms') }}</h2>
{{ forms.textField({
    label: 'Email recipients'|t('simple-forms'),
    id: 'notificationRecipients',
    name: 'notificationRecipients',
    class: 'simple-forms__selector--on',
    value: form.notificationRecipients,
    errors: form.getErrors('notificationRecipients'),
    instructions: 'Who will receive the notification? Enter comma separated email addresses for more recipients.'|t('simple-forms')
}) }}
{{ forms.textField({
    label: 'Notification subject'|t('simple-forms'),
    id: 'notificationSubject',
    name: 'notificationSubject',
    class: 'simple-forms__selector--on',
    value: form.notificationSubject,
    errors: form.getErrors('notificationSubject'),
    instructions: 'The subject of your notification email.'|t('simple-forms'),
    placeholder: '{formName} form was submitted'|t('simple-forms')
}) }}
{{ forms.textField({
    label: 'Sender name notification email'|t('simple-forms'),
    id: 'notificationSenderName',
    name: 'notificationSenderName',
    class: 'simple-forms__selector--on',
    value: form.notificationSenderName,
    errors: form.getErrors('notificationSenderName'),
    instructions: 'The name of the sender of your notification email.'|t('simple-forms')
}) }}
{{ forms.textField({
    label: 'Sender email address notification email'|t('simple-forms'),
    id: 'notificationSenderEmail',
    name: 'notificationSenderEmail',
    class: 'simple-forms__selector--on',
    value: form.notificationSenderEmail,
    errors: form.getErrors('notificationSenderEmail'),
    instructions: 'The email address of the sender of your notification email.'|t('simple-forms')
}) }}
{{ forms.textField({
    label: 'Reply to email address'|t('simple-forms'),
    id: 'notificationReplyToEmail',
    name: 'notificationReplyToEmail',
    class: 'simple-forms__selector--on',
    value: form.notificationReplyToEmail,
    errors: form.getErrors('notificationReplyToEmail'),
    instructions: 'The reply to email address of your notification email.'|t('simple-forms')
}) }}
<hr>
<h2>{{ 'Confirmation'|t('simple-forms') }}</h2>
{{ forms.textField({
    label: 'Confirmation subject'|t('simple-forms'),
    id: 'confirmationSubject',
    name: 'confirmationSubject',
    class: 'simple-forms__selector--on',
    value: form.confirmationSubject,
    errors: form.getErrors('confirmationSubject'),
    instructions: 'The subject of your confirmation email.'|t('simple-forms'),
    placeholder: 'Thanks for your submission.'|t('simple-forms')
}) }}
{{ forms.textField({
    label: 'Sender name confirmation email'|t('simple-forms'),
    id: 'confirmationSenderName',
    name: 'confirmationSenderName',
    class: 'simple-forms__selector--on',
    value: form.confirmationSenderName,
    errors: form.getErrors('confirmationSenderName'),
    instructions: 'The name of the sender of your confirmation email.'|t('simple-forms')
}) }}
{{ forms.textField({
    label: 'Sender email address confirmation email'|t('simple-forms'),
    id: 'confirmationSenderEmail',
    name: 'confirmationSenderEmail',
    class: 'simple-forms__selector--on',
    value: form.confirmationSenderEmail,
    errors: form.getErrors('confirmationSenderEmail'),
    instructions: 'The email address of the sender of your confirmation email.'|t('simple-forms')
}) }}
