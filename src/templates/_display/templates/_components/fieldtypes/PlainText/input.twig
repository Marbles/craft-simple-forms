{% import 'forms' as forms %}

{% set config = {
    id: name,
    name: name,
    value: value,
    class: 'nicetext',
    maxlength: field.charLimit,
    showCharsLeft: true,
    placeholder: field.placeholder|t('site'),
    rows: field.initialRows,
    type: type is defined ? type : 'text',
    required: field.required,
} %}

{% if field.multiline %}
    {{ forms.textarea(config) }}
{% else %}
    {{ forms.text(config) }}
{% endif %}
